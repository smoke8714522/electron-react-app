{
  "name": "era",
  "version": "10.1.0",
  "description": "A modern Electron application template with React, Vite, TypeScript, and TailwindCSS",
  "main": "./out/main/main.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guasam/electron-react-app"
  },
  "author": {
    "name": "Guasam",
    "url": "https://github.com/guasam"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "scripts": {
    "dev": "electron-vite dev -w",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "start": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "electron-vite build && electron-builder --dir",
    "build:win": "electron-vite build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.16.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "better-sqlite3": "^11.9.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "pdf-thumbnail": "^1.0.6",
    "react-icons": "^5.5.0",
    "react-tooltip": "^5.28.1",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rushstack/eslint-patch": "^1.10.5",
    "@tailwindcss/vite": "^4.0.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^3.0.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.37.4",
    "framer-motion": "^12.7.4",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.7.3",
    "vite": "^6.2.0"
  }
}
